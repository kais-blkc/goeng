mixin tarif-item(tags, title, list, price, classType)
  div(class="sec-tarifs__item "+classType)
    .sec-tarifs__item-body
      .sec-tarifs__item-tags 
        p= tags[0]
        span= tags[1]

      .sec-tarifs__item-title= title

      ul.sec-tarifs__item-list
        each val in list
          li!= val

    .sec-tarifs__item-price!= price


